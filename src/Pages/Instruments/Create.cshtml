@page "{handler?}"
@model CreateModel
@{
  Layout = "_Layout";
}

<form method="post">
  <fieldset>
    <legend>Create</legend>
  <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
      <label for="name" class="form-label mt-4">Name</label>
      <input type="text" class="form-control" id="name" aria-describedby="nameHelp" asp-for="Instrument!.Name">
    </div>
    </fieldset>
      <button type="submit" class="btn btn-primary mt-2" asp-page-handler="create">Create</button>
      <a type="submit" class="btn btn-primary mt-2" asp-page="./Index">Back to list</a>
  </fieldset>
</form>
